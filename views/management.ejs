<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <section class="section secondary-color-bg">
        <div class="centered-container">
            <h1 class="decorated-title font-secondary main-color"><span class="main-color-emphasized">
                            Item</span> Management</h1>
            <div class="separator"></div>
            <h2 class="decorated-title font-secondary main-color">Choose an action</h2>
        </div>
        <div class="container">
            <div class="flex-container">
                <div class="buttons">
                    <a href="/management/additem">
                        <button class="btn">Add item</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/management/updateitem">
                        <button class="btn">Update item</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/management/deleteitem">
                        <button class="btn">Delete item</button>
                    </a>
                </div>
            </div>
        </div>
        <div class="centered-container">
            <h1 class="decorated-title font-secondary main-color"><span class="main-color-emphasized">
                            Category</span> Management</h1>
            <div class="separator"></div>
            <h2 class="decorated-title font-secondary main-color">Choose an action</h2>
        </div>
        <div class="container">
            <div class="flex-container">
                <div class="buttons">
                    <a href="/management/addcategory">
                        <button class="btn">Add category</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/management/updatecategory">
                        <button class="btn">Update category</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/management/deletecategory">
                        <button class="btn">Delete category</button>
                    </a>
                </div>
            </div>
        </div>
    </section>

</main>

<%- include(`partials/footer`); %>

</body>

</html>
